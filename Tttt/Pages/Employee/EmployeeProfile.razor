                                                <div class="col-sm-9">
                                                    <input type="text" readonly id="FirstName" class="form-control" placeholder="First Name"
                                                           value="@CurrentDepartment.DepartmentName" />
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="State" class="col-sm-3 col-form-label">
                                                    Department Building
