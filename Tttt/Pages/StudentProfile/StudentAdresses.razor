@page "/StudentAdresses/{UserID}"

<section style="background-color: #eee;">
    <div class="container py-5">

        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        @if (CurrenStudent.Image is not null)

                        {

                            <img src="https://localhost:44348/Images/@CurrenStudent.Image" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px;height:150px;">

                        }
                        else
                        {
                            <img src="/pluto-1.0.0/images/images (2).jpg" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px;">
                        }
                        <h5 class="my-3">@CurrenStudent.FirstName @CurrenStudent.LastName</h5>
                        @*<p class="text-muted mb-1">Schools Year: @CurrenStudent.SchoolYears.SchoolYear </p>
        <p class="text-muted mb-1">Class Room: @CurrenStudent.ClassRoom.ClassRoomNumber </p>*@
                        <p class="text-muted mb-4">@CurrenStudentAdress.State, @CurrenStudentAdress.Government, @CurrenStudentAdress.street, @CurrenStudentAdress.ZipCode</p>
                        <div class="d-flex justify-content-center mb-2">
                            <input class="form-control" @ref="inputReference" type="file" @onchange="@OpenFileAsync" id="formFile">
                        </div>
                    </div>
                </div>
                <div class="card mb-4 mb-lg-0">
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush rounded-3">
                            <li class="list-group-CurrenStudentAdress d-flex justify-content-between align-CurrenStudentAdresss-center p-3">
                                <i class="fa fa-globe fa-lg text-warning"></i>
                                <p class="mb-0">https://mdbootstrap.com</p>
                            </li>
                            <li class="list-group-CurrenStudentAdress d-flex justify-content-between align-CurrenStudentAdresss-center p-3">
                                <i class="fa fa-github fa-lg" style="color: #333333;"></i>
                                <p class="mb-0">mdbootstrap</p>
                            </li>
                            <li class="list-group-CurrenStudentAdress d-flex justify-content-between align-CurrenStudentAdresss-center p-3">
                                <i class="fa fa-twitter fa-lg" style="color: #55acee;"></i>
                                <p class="mb-0">mdbootstrap</p>
                            </li>
                            <li class="list-group-CurrenStudentAdress d-flex justify-content-between align-CurrenStudentAdresss-center p-3">
                                <i class="fa fa-instagram fa-lg" style="color: #ac2bac;"></i>
                                <p class="mb-0">mdbootstrap</p>
                            </li>
                            <li class="list-group-CurrenStudentAdress d-flex justify-content-between align-CurrenStudentAdresss-center p-3">
                                <i class="fa fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                                <p class="mb-0">mdbootstrap</p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@CurrenStudent.FirstName @CurrenStudent.LastName</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Date Of Birth</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@CurrenStudent.DB.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Phone</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@CurrenStudent.Phone</p>
                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Address</p>
                            </div>
                            <div class="col-sm-7">
                                <p class="text-muted mb-0">@CurrenStudentAdress.State, @CurrenStudentAdress.Government, @CurrenStudentAdress.street, @CurrenStudentAdress.ZipCode</p>
                            </div>
                            <div class="col-sm-2">
                                <button @onclick="@(async () => await Modify(CurrenStudent.StudenntSSN))" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Edit"><i class="fa fa-pencil-square"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" hidden="@IsShow">
                    <div class="col-md-11 m-auto">
                        <div class="card mb-4 mb-md-0">
                            <div class="card-body">
                                @*//Update Student Address*@
                                <h3 class="text-center text-info">Edit @CurrenStudent.FirstName @CurrenStudent.LastName</h3>
                                <EditForm Model="@CurrenStudentAdress" OnValidSubmit="@HandleValidSubmitUpdate">
                                    <DataAnnotationsValidator />
                                    <hr />
                                    <div class="row" id="edit">
                                        <div class="col-md-8 m-auto">

                                            <div class="form-group row">
                                                <label for="State" class="col-sm-3 col-form-label">
                                                    State
                                                </label>
                                                <div class="col-sm-9">
                                                    <InputText id="FirstName" class="form-control" placeholder="First Name"
                                                               @bind-Value="CurrenStudentAdress.State" />
                                                    <div class="col-sm-8 text-danger">

                                                        <ValidationMessage For="() => CurrenStudentAdress.State" />

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="Government" class="col-sm-3 col-form-label">
                                                    Government
                                                </label>
                                                <div class="col-sm-9">
                                                    <InputText id="Government" class="form-control" placeholder="Government"
                                                               @bind-Value="CurrenStudentAdress.Government" />
                                                    <div class="col-sm-8 text-danger">

                                                        <ValidationMessage For="() => CurrenStudentAdress.Government" />

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="street" class="col-sm-3 col-form-label">
                                                    street
                                                </label>
                                                <div class="col-sm-9">
                                                    <InputText id="street" class="form-control" placeholder="street"
                                                               @bind-Value="CurrenStudentAdress.street" />
                                                    <div class="col-sm-8 text-danger">

                                                        <ValidationMessage For="() => CurrenStudentAdress.street" />

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="zip" class="col-sm-3 col-form-label">
                                                    Zip Code
                                                </label>
                                                <div class="col-sm-9">
                                                    <InputText id="zip" class="form-control" placeholder="Zip Code"
                                                               @bind-Value="CurrenStudentAdress.ZipCode" />
                                                    <div class="col-sm-8 text-danger">

                                                        <ValidationMessage For="() => CurrenStudentAdress.ZipCode" />

                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="form-control">
                                        <button type="submit" class="btn btn-block btn-success">Save</button>
                                    </div>
                                </EditForm>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
